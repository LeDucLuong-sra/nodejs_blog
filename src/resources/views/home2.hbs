<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/">Logo</a>
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
            Tài khoản
        </button>

        <div class="dropdown-menu">
            <a class="dropdown-item" href="/me/stored/books">Quản lý kho sách</a>
            <a class="dropdown-item" href="/book/create">Đăng sách mới</a>
            <a class="dropdown-item" href="/user/logout">Đăng Xuất</a>
        </div>
    </div>
</nav>
<div class="mt-4">
    <div class="row">
        {{#each books}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-item">
                <a href="/book/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.giaban}} đ</p>
                    <a href="#" class="btn btn-primary">Mua Sách</a>
                </div>
            </div>
        </div>

        {{/each}}
    </div>
</div>